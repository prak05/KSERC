# [Purpose] Example environment configuration for KSERC ARA Backend
# [Source] Sample configuration file
# [Why] Provides template for customizing application settings
# [Instructions] Copy this file to .env and modify values as needed

# ============================================================
# Server Configuration
# ============================================================

# [Setting] HOST - Network interface to bind server to
# [Default] 0.0.0.0 (all interfaces)
# [Options] 0.0.0.0 (all), 127.0.0.1 (localhost only), specific IP
HOST=0.0.0.0

# [Setting] PORT - Port number for the server
# [Default] 8000
# [Note] Choose an available port; common alternatives: 8001, 8080, 5000
PORT=8000

# ============================================================
# Application Configuration
# ============================================================

# [Setting] DEBUG_MODE - Enable/disable debug features
# [Default] True
# [Options] True (development), False (production)
# [Impact] Enables API docs, verbose errors, auto-reload
DEBUG_MODE=True

# [Setting] LOG_LEVEL - Logging verbosity level
# [Default] INFO
# [Options] DEBUG, INFO, WARNING, ERROR, CRITICAL
# [Note] DEBUG provides most detail, CRITICAL provides least
LOG_LEVEL=INFO

# ============================================================
# File Upload Configuration
# ============================================================

# [Setting] MAX_UPLOAD_SIZE - Maximum allowed file size in bytes
# [Default] 52428800 (50 MB)
# [Calculation] 50 * 1024 * 1024 = 52428800 bytes
# [Note] Adjust based on expected PDF sizes
MAX_UPLOAD_SIZE=52428800

# ============================================================
# KSERC Specific Configuration
# ============================================================

# [Setting] DEFAULT_FINANCIAL_YEAR - Default FY if not extracted from PDF
# [Format] YYYY-YY
DEFAULT_FINANCIAL_YEAR=2023-24

# [Setting] REGULATORY_AUTHORITY - Organization name
REGULATORY_AUTHORITY=Kerala State Electricity Regulatory Commission (KSERC)

# ============================================================
# PDF Processing Configuration
# ============================================================

# [Setting] PDF_DPI - Resolution for image extraction from PDFs
# [Default] 300
# [Note] Higher values give better quality but slower processing
PDF_DPI=300

# [Setting] TABLE_DETECTION_TOLERANCE - Pixel tolerance for table detection
# [Default] 3
# [Note] Adjust if table detection is too loose or too strict
TABLE_DETECTION_TOLERANCE=3

# ============================================================
# Free LLM API Configuration (Hugging Face Inference API)
# ============================================================

# [Setting] HF_API_TOKEN - Hugging Face API token
# [Default] Empty (uses local summary)
HF_API_TOKEN=

# [Setting] HF_API_MODEL - Hugging Face Inference model
# [Default] deepseek-ai/DeepSeek-R1:fastest
HF_API_MODEL=deepseek-ai/DeepSeek-R1:fastest

# [Setting] HF_API_URL - Override endpoint if needed
# [Default] https://router.huggingface.co/v1/chat/completions
HF_API_URL=https://router.huggingface.co/v1/chat/completions

# [Setting] LLM_TIMEOUT_SECONDS - API request timeout
# [Default] 30 seconds
LLM_TIMEOUT_SECONDS=30

# ============================================================
# RAG Configuration
# ============================================================

# [Setting] RAG_STORAGE_DIR - Directory for RAG data
RAG_STORAGE_DIR=data/rag

# [Setting] RAG_INDEX_FILE - Index file path
RAG_INDEX_FILE=data/rag/index.json

# [Setting] RAG_SEED_DIR - Seed PDFs/MDs for indexing
RAG_SEED_DIR=/home/prak05/GITHUB/KSERC/Material

# ============================================================
# Remote RAG (Cloudflare Worker + R2)
# ============================================================

# [Setting] RAG_REMOTE_BASE_URL - Cloudflare Worker base URL
# [Default] Empty (use local indexing)
RAG_REMOTE_BASE_URL=

# [Setting] RAG_REMOTE_TOKEN - Optional Bearer token for Worker auth
# [Default] Empty (no auth)
RAG_REMOTE_TOKEN=

# ============================================================
# Verdict Output
# ============================================================

# [Setting] VERDICT_DIR - Directory for generated verdict PDFs
VERDICT_DIR=data/verdicts

# ============================================================
# Google Cloud Storage (Verdict PDFs)
# ============================================================

# [Setting] GCS_BUCKET_NAME - Public bucket name for verdict PDFs
GCS_BUCKET_NAME=kserc-verdict

# [Setting] GCS_PUBLIC_BASE_URL - Optional override for public URL
# [Default] https://storage.googleapis.com/<bucket>
GCS_PUBLIC_BASE_URL=

